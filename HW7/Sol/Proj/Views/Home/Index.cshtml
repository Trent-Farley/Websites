@{
    ViewData["Title"] = "Trent Farley's Github";
}

<div id="content" style="display:none">

    <div class="card" style="background-color:rgb(30, 30, 30);">
        <div class="row">
            <div class="col-sm-3">
                <img id="userImg" src="" alt="Profile photo" class="img-thumbnail" />
            </div>
            <div class="col">
                <div class="card-body">
                    <h4 class="card-title" style="color:rgb(202, 185, 0)" id="userName"></h4>
                    <div class="card-text" style="color:white;">
                        <p id="userEmail"></p>
                        <p id="userLocation"></p>
                        <p id="userCompany"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-columns" id="repos"></div>
</div>

<div class="modal align-middle" id="commits" tabindex="-1" role="dialog" aria-labelledby="title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Commits</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="commitBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/index.js"></script>
}