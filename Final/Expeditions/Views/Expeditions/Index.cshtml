@model Expeditions.ViewModels.Hike

@{
    ViewData["Title"] = "Index";
}

<div class="card  bg-transparent shadow-lg " style="padding: 2% 5% 2% 5%">
    <p>
        <a class="btn btn-outline-success" asp-action="Create">Create New</a>
    </p>
    <h2 class="card-tile">
        Expeditions
    </h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Season
                </th>
                <th>
                    Year
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    Termination Reason
                </th>
                <th>
                    Oxygen Used
                </th>
                <th>
                    Mountain
                </th>
                <th>
                    Trekking Agency
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Hikes)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Season)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TerminationReason)
                    </td>
                    <td>
                        @if ((bool)item.OxygenUsed)
                        {
                            <p>Oxygen used</p>
                        }
                        else
                        {
                            <p>Oxygen not used</p>
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Peak.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrekkingAgency.Name)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script src="/js/Expeditions.js"></script>
}