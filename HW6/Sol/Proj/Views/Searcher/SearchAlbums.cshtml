@model SearchResult
@{
    ViewData["Title"] = "SearchAlbums";
}
<div class="container">
    <div class="card" style="background-color: rgb(25, 25, 25); color: #d5d5d5;">
        <h4 class="card-title text-center">Search for artist to find their album!</h4>
        <form method="post" asp-controller="Home" asp-action="Search">
            <div class="input-group">
                <input asp-for="Search" type="search" min="2" placeholder="Artist Name" class="form-control cool-input" aria-label="Search for artist name" />
                <div class="input-group-append">
                    <button class=" btn btn-outline-primary" type="submit">Search</button>
                </div>
            </div>
        </form>
        <h6 class="text-center" style="color:white">Possible Artists</h6>
        @foreach (var val in Model.AlbumResult)
        {
            <button class="btn btn-dark" type="button" data-toggle="collapse" data-target="#album_@val.AlbumId" aria-expanded="false" aria-controls="album_@val.AlbumId">
                <img class="float-left" width="20" height="30" src="~/Images/singer.png" alt="singer" /> @val.Artist.Name
            </button>

            <div class="collapse" id="album_@val.AlbumId">
                <div class="card card-body" style="background-color: rgb(25, 25, 25); color: #d5d5d5;">
                    <h6 class="text-center" style="color:white">Albums</h6>
                    <button class="btn btn-dark" type="button" data-toggle="collapse" data-target="#tracks_@val.AlbumId" aria-expanded="false" aria-controls="tracks_@val.AlbumId">
                        <img class="float-left" width="20" height="30" src="~/Images/album.jpg" alt="album photo" /> @val.Title
                    </button>
                    <div class="collapse" id="tracks_@val.AlbumId">
                        <div class="card card-body" style="background-color: rgb(25, 25, 25); color: #d5d5d5;">
                            <h6 class="text-center" style="color:white">Songs</h6>
                            @foreach (var t in val.Tracks)
                            {
                                <p class="text-center" style="color:#d5d5d5">@t.Name</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>