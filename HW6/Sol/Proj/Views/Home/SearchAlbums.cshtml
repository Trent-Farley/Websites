@model SearchResult
@{
    ViewData["Title"] = "Results";
}
<div class="container">
    <div class="card " style="background-color:rgb(25, 25, 25); color:#d5d5d5">
        <h4 class="card-title text-center">Search for artist to find their album!</h4>
        <form method="post" asp-controller="Home" asp-action="Search">
            <div class="input-group">
                <input asp-for="Search" type="search" min="2" placeholder="Artist Name" class="form-control cool-input" aria-label="Search for artist name" />
                <div class="input-group-append">
                    <button class=" btn btn-outline-primary" type="submit">Search</button>
                </div>
            </div>
        </form>

        @foreach (var val in Model.AlbumResult)
        {
            <p style="color:white; ">@val.Title</p>
        }
    </div>
</div>