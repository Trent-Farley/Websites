@model HWScheduler.ViewModels.HomeworkList
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <a class="btn btn-outline-dark" asp-action="Index">All</a>

            </div>
            @foreach (var course in Model.Courses)
            {
                <div style="margin:0; padding:0;" class="col">
                    <a class="btn btn-outline-primary" asp-action="CourseList" asp-route-id="@course.Id">@course.Name</a>
                </div>
            }
            <div class="col">
                <a style="float:right;" asp-action="Create" class="btn btn-outline-danger">➕</a>
            </div>
        </div>
    </div>



    <table class="table table-striped">
        @*Done | Class | Assignment | Tagname | Due*@
        <thead>
            <tr>
                <th></th>
                <th>Class</th>
                <th>Assignment</th>
                <th>Tags</th>
                <th>Description</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in Model.Assignments)
            {
                @if ((bool)!h.Done)
                {
                    <tr>
                        @*Set value of done to true*@
                        <td><a asp-action="AssignmentDone" asp-route-id="@h.Id" class="btn btn-outline-success curved">✔</a></td>
                        <td>@h.Class.Name</td>
                        <td>@h.Info.Title</td>
                        <td>
                            @foreach (var t in h.Line.Tagname.Split(" "))
                            {
                                <div class="btn btn-primary">@t</div>
                            }
                        </td>
                        <td>@h.Info.Description</td>
                        <td>@h.Info.Duedate</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
